<odoo>
    <!-- Tree View -->
    <record id="view_rental_tag_tree" model="ir.ui.view">
        <field name="name">rental.tag.tree</field>
        <field name="model">rental.tag</field>
        <field name="arch" type="xml">
            <tree string="Étiquettes d'Équipement">
                <field name="name"/>
                <field name="color"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_rental_tag_form" model="ir.ui.view">
        <field name="name">rental.tag.form</field>
        <field name="model">rental.tag</field>
        <field name="arch" type="xml">
            <form string="Étiquette d'Équipement">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color"/>
                        <field name="company_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_rental_tag" model="ir.actions.act_window">
        <field name="name">Étiquettes d'Équipements</field>
        <field name="res_model">rental.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_rental_tag"
              name="Étiquettes"
              parent="base.menu_custom_rentals"
              action="action_rental_tag"/>
</odoo>
