<odoo>
    <!-- list View -->
    <record id="view_rental_tag_list" model="ir.ui.view">
        <field name="name">rental.order.tag.list</field>
        <field name="model">rental.order.tag</field>
        <field name="arch" type="xml">
            <list string="Étiquettes d'Équipement">
                <field name="name"/>
                <field name="color"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_rental_tag_form" model="ir.ui.view">
        <field name="name">rental.order.tag.form</field>
        <field name="model">rental.order.tag</field>
        <field name="arch" type="xml">
            <form string="Étiquette d'Équipement">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color"/>
                        <field name="company_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_rental_product_tag" model="ir.actions.act_window">
        <field name="name">Étiquettes d'Équipements</field>
        <field name="res_model">rental.order.tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_rental_product_tag"
              name="Étiquettes"
              parent="akadev_equipment_leasing.product_rental_config_sub_menu"
              action="action_rental_product_tag"/>
</odoo>
