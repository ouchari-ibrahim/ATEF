<odoo>
    <!-- list View -->
    <record id="view_rental_category_list" model="ir.ui.view">
        <field name="name">rental.order.category.list</field>
        <field name="model">rental.order.category</field>
        <field name="arch" type="xml">
            <list string="Catégories d'Équipements">
                <field name="name"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_rental_category_form" model="ir.ui.view">
        <field name="name">rental.order.category.form</field>
        <field name="model">rental.order.category</field>
        <field name="arch" type="xml">
            <form string="Catégorie d'Équipement">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="company_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_rental_category" model="ir.actions.act_window">
        <field name="name">Catégories d'Équipements</field>
        <field name="res_model">rental.order.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
<!--    <menuitem id="menu_rental_category"-->
<!--              name="Catégories"-->
<!--              parent="base.menu_custom_rentals"-->
<!--              action="action_rental_category"/>-->
</odoo>
