<odoo>
    <record id="view_product_template_rental_form" model="ir.ui.view">
        <field name="name">product.template.form.rental</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <!-- Add a new group in the Sales tab -->
            <xpath expr="//div[@name='options']" position="after">
                <div name="rental">
                    <span name="rental_option" class="d-inline-flex">
                        <field name="rentable" string="Louable"/>
                        <label for="rentable"/>

                    </span>
                </div>


            </xpath>


            <xpath expr="//page[@name='sales']//group" position="inside">
                <group string="Location">
                    <field name="rental_category_id"/>
                    <field name="rental_tag_ids" widget="many2many_tags"/>
                    <field name="daily_rental_price"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
