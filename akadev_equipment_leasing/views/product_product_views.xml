<odoo>
    <record id="view_product_product_rental_form" model="ir.ui.view">
        <field name="name">product.product.form.rental</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">

            <!-- Add rental fields in the general group -->
            <xpath expr="//page[@name='general_information']" position="inside">
                <group string="Location">
                    <field name="rentable" readonly="1"/>
                    <field name="rental_category_id" readonly="1"/>
                    <field name="rental_tag_ids" readonly="1"/>
                    <field name="daily_rental_price" readonly="1"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
