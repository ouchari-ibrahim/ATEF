<odoo>
    <!-- ===================== -->
    <!-- 1️⃣ List View for rentable products -->
    <!-- ===================== -->
    <record id="view_rental_product_list" model="ir.ui.view">
        <field name="name">rental.product.list</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <list string="Produits Louables">
                <field name="name"/>
                <field name="default_code"/>
                <field name="categ_id"/>
                <field name="rentable"/>
                <field name="list_price"/>
            </list>
        </field>
    </record>

    <!-- ===================== -->
    <!-- 2️⃣ Form View -->
    <!-- ===================== -->
    <record id="view_rental_product_form" model="ir.ui.view">
        <field name="name">rental.product.form</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <form string="Produit Louable">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="default_code"/>
                        <field name="categ_id"/>
                        <field name="rentable"/>
                        <field name="list_price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ===================== -->
    <!-- 3️⃣ Action -->
    <!-- ===================== -->
    <record id="action_rental_product" model="ir.actions.act_window">
        <field name="name">Produits Louables</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('rentable','=',True)]</field> <!-- default filter -->
    </record>

    <!-- ===================== -->
    <!-- 4️⃣ Menu Item -->
    <!-- ===================== -->
    <menuitem id="menu_rental_products"
              name="Produits Louables"
              parent="akadev_equipment_leasing.menu_rental_root"
              action="action_rental_product"/>
</odoo>
