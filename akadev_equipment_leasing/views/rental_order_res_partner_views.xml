<!-- views/res_partner_rental_menu.xml -->
<odoo>
    <!-- Action for partner rental list -->
    <record id="action_partner_rental_list" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_client_location','=',True)]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Cliquez sur "Cr√©er" pour ajouter un nouveau client de location.
            </p>
        </field>
    </record>

    <!-- Menu item under rental root -->
    <menuitem id="menu_rental_client"
              name="Clients"
              parent="menu_rental_root"
              action="action_partner_rental_list"
              sequence="10"/>
</odoo>
