<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document Bon de Commande -->
    <template id="report_purchaseorder_document_custom">
        <t t-foreach="docs" t-as="doc">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <t t-call="nn_custom_report.external_layout">
                <t t-set="o" t-value="doc"/>
                <t t-set="doc" t-value="doc"/>

                <!-- Informations Commande & Fournisseur -->
                <div class="row" style="margin-bottom: 20px;">
                    <!-- Gauche: Informations Commande -->
                    <div class="col-5">
                        <div style="border: 2px solid black; font-size: 14px;">
                            <div style="background-color: #d9d9d9; color: #003366; padding: 8px 10px;">
                                <strong>Bon de Commande # :</strong>
                                <span t-field="doc.name"/>
                            </div>
                            <div style="padding: 8px 10px;">
                                <strong>Date de Commande :</strong>
                                <span t-field="doc.date_order" t-options='{"widget": "date"}'/>
                            </div>
                            <div style="padding: 8px 10px;">
                                <strong>Responsable Achat :</strong>
                                <span t-field="doc.user_id"/>
                            </div>
                        </div>
                    </div>

                    <div class="col-1"></div>

                    <!-- Droite: Informations Fournisseur -->
                    <div class="col-6">
                        <div style="border: 2px solid black; padding: 15px;">
                            <div>
                                <strong>Fournisseur :</strong>
                                <span t-field="doc.partner_id.name"/>
                            </div>
                            <div>
                                <strong>Adresse :</strong>
                                <div t-field="doc.partner_id"
                                     t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                            </div>
                            <div t-if="doc.partner_id.vat">
                                <strong>Matricule Fiscal :</strong>
                                <span t-field="doc.partner_id.vat"/>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tableau Produits -->
                <table class="table table-sm"
                       style="margin-bottom: 20px; border: 2px solid black; border-collapse: collapse; width: 100%;">
                    <thead>
                        <tr style="background-color: #f8f9fa; color: #003366; text-align: center; height: 40px;">
                            <th style="border: 2px solid black;">DESCRIPTION</th>
                            <th style="border: 2px solid black;">QUANTITÃ‰</th>
                            <th style="border: 2px solid black;">PRIX UNITAIRE</th>
                            <th style="border: 2px solid black;">TAXES</th>
                            <th style="border: 2px solid black;">MONTANT</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.order_line" t-as="line">
                            <tr>
                                <td style="border-left: 2px solid black; border-right: 2px solid black;">
                                    <span t-field="line.name"/>
                                </td>
                                <td class="text-center"
                                    style="border-left: 2px solid black; border-right: 2px solid black;">
                                    <span t-field="line.product_qty"/>
                                </td>
                                <td class="text-right"
                                    style="border-left: 2px solid black; border-right: 2px solid black;">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-right"
                                    style="border-left: 2px solid black; border-right: 2px solid black;">
                                    <span t-esc="', '.join(map(lambda x: x.name, line.tax_ids))"/>
                                </td>
                                <td class="text-right"
                                    style="border-left: 2px solid black; border-right: 2px solid black;">
                                    <span t-field="line.price_subtotal"
                                          t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <!-- Section Totaux -->
                <div class="row justify-content-end">
                    <div class="col-4">
                        <table class="table table-sm" style="border: 2px solid black; border-collapse: collapse;">
                            <tr>
                                <td style="border: 2px solid black;">
                                    <strong>Sous-Total</strong>
                                </td>
                                <td class="text-right" style="border: 2px solid black;">
                                    <span t-field="doc.amount_untaxed"
                                          t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td style="border: 2px solid black;">Taxes</td>
                                <td class="text-right" style="border: 2px solid black;">
                                    <span t-field="doc.amount_tax"
                                          t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td style="border: 2px solid black;">
                                    <strong>Total</strong>
                                </td>
                                <td class="text-right" style="border: 2px solid black;">
                                    <span t-field="doc.amount_total"
                                          t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Notes / Signature -->
                <div class="row" style="margin-top: 30px;">
                    <div class="col-6">
                        <p t-field="doc.note"/>
                    </div>
                    <div class="col-6 text-right">
                        <div style="margin-top: 50px;">
                            <strong>
                                <u>
                                    <i>Cachet et Signature</i>
                                </u>
                            </strong>
                        </div>
                    </div>
                </div>

            </t>
        </t>
    </template>

    <!-- Wrapper -->
    <template id="report_purchaseorder_custom">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="nn_custom_report.report_purchaseorder_document_custom" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>
