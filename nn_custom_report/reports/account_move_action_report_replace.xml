<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Report Action: Factures avec paiements -->
        <record id="account_invoices" model="ir.actions.report">
            <field name="name">Factures</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">nn_custom_report.report_invoice_with_payments_custom</field>
            <field name="report_file">nn_custom_report.report_invoice_with_payments_custom</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')
            </field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>

        </record>

        <!-- Report Action: Factures sans paiement -->
        <record id="account_invoices_without_payment" model="ir.actions.report">
            <field name="name">Factures sans paiement</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">nn_custom_report.report_invoice_custom</field>
            <field name="report_file">nn_custom_report.report_invoice_custom</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')
            </field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>