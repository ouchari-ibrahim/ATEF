<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!-- Report Document Template -->
    <template id="report_saleorder_document_custom">
        <t t-foreach="docs" t-as="doc">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>

            <t t-call="nn_custom_report.external_layout">
                <t t-set="o" t-value="doc"/>
                <t t-set="doc" t-value="doc"/>

                <!-- Client & Invoice/Shipping Info Card -->
                <div class="row" style="margin-bottom: 20px;">
                    <!-- Left: Order Info Card -->
                    <div class="col-5">
                        <div style="border: 2px solid black; font-size: 14px;">
                            <div style="background-color: #d9d9d9; color: #003366; padding: 8px 10px;">
                                <strong>Order/Quotation # :</strong>
                                <span t-field="doc.name"/>
                            </div>
                            <div style="padding: 8px 10px;">
                                <strong>Quotation Date / Order Date :</strong>
                                <span t-field="doc.date_order" t-options='{"widget": "date"}'/>
                            </div>
                            <div style="padding: 8px 10px;">
                                <strong>Expiration Date :</strong>
                                <span t-field="doc.validity_date"/>
                            </div>
                            <div style="padding: 8px 10px;">
                                <strong>Salesperson :</strong>
                                <span t-field="doc.user_id"/>
                            </div>
                        </div>
                    </div>

                    <div class="col-1"></div>

                    <!-- Right: Client Info Card -->
                    <div class="col-6">
                        <div style="border: 2px solid black; padding: 15px;">
                            <div>
                                <strong>Client :</strong>
                                <span t-field="doc.partner_id.name"/>
                            </div>
                            <div>
                                <strong>Adresse :</strong>
                                <div t-field="doc.partner_id"
                                     t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                            </div>
                            <div>
                                <strong>VAT :</strong>
                                <span t-field="doc.partner_id.vat"/>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Products Table -->
                <table class="table table-sm"
                       style="margin-bottom: 20px; border: 2px solid black; border-collapse: collapse; width: 100%;">
                    <thead>
                        <tr style="background-color: #f8f9fa; color: #003366; text-align: center; height: 40px;">
                            <th style="border: 2px solid black;">DESCRIPTION</th>
                            <th style="border: 2px solid black;">QUANTITY</th>
                            <th style="border: 2px solid black;">UNIT PRICE</th>
                            <th style="border: 2px solid black;">DISC.%</th>
                            <th style="border: 2px solid black;">TAXES</th>
                            <th style="border: 2px solid black;">TOTAL</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.order_line" t-as="line">
                            <tr>
                                <td style="border-left: 2px solid black; border-right: 2px solid black;">
                                    <span t-field="line.name"/>
                                </td>
                                <td class="text-center"
                                    style="border-left: 2px solid black; border-right: 2px solid black;">
                                    <span t-field="line.product_uom_qty"/>
                                </td>
                                <td class="text-right"
                                    style="border-left: 2px solid black; border-right: 2px solid black;">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-center"
                                    style="border-left: 2px solid black; border-right: 2px solid black;">
                                    <span t-field="line.discount"/>
                                </td>
                                <td class="text-right"
                                    style="border-left: 2px solid black; border-right: 2px solid black;">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"/>
                                </td>
                                <td class="text-right"
                                    style="border-left: 2px solid black; border-right: 2px solid black;">
                                    <span t-field="line.price_subtotal"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <!-- Totals Section -->
                <div class="row">
                    <div class="col-6">
                        <div style="border: 1px solid black; text-align: center; padding: 8px;">
                            <strong>Arrêter à la somme de:</strong>
                            <span t-field="doc.num_word"/>
                        </div>
                    </div>
                    <div class="col-6">
                        <table class="table table-sm"
                               style="margin-left: auto; width: 300px; border: 2px solid black; border-collapse: collapse;">
                            <tr>
                                <td style="border: 2px solid black;">
                                    <strong>Subtotal</strong>
                                </td>
                                <td class="text-right" style="border: 2px solid black;">
                                    <span t-field="doc.amount_untaxed"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="border: 2px solid black;">
                                    <strong style="color: #003366;">Total</strong>
                                </td>
                                <td class="text-right" style="border: 2px solid black;">
                                    <span t-field="doc.amount_total"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Payment Section -->
                <div class="row" style="margin-top: 30px;">
                    <div class="col-6">
                        <div style="border: 1px solid; padding: 10px;">
                            <div>
                                <strong>Condition de paiement:</strong>
                                <span t-field="doc.payment_term_id.name"/>
                            </div>
                            <div>
                                <strong>Paiement:</strong>
                                Par virement Bancaire
                            </div>
                            <div>
                                <strong>Banque:</strong>
                                BIAT
                            </div>
                            <div>
                                <strong>Agence:</strong>
                                Yasminet
                            </div>
                            <div>
                                <strong>IBAN:</strong>
                                TN59 0814 0031 0359 0001 1053
                            </div>
                            <div>
                                <strong>SWIFT:</strong>
                                BIATTNTT
                            </div>
                        </div>
                    </div>
                    <div class="col-6 text-right">
                        <div style="margin-top: 50px;">
                            <strong>
                                <u>
                                    <i>Cachet et Signature</i>
                                </u>
                            </strong>
                        </div>
                    </div>
                </div>

                <!-- Notes / Terms -->
                <div class="mt16">
                    <p t-field="doc.note"/>
                    <p t-if="doc.payment_term_id.note">
                        <span t-field="doc.payment_term_id.note"/>
                    </p>
                </div>

            </t> <!-- End external layout call -->
        </t> <!-- End t-foreach="docs" -->
    </template>
</odoo>