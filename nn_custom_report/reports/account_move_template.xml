<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document">
        <t t-call="nn_custom_report.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)" />
            <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/>

            <div class="page">
                <div class="oe_structure"/>

                <!-- Invoice Info & Customer Info Cards -->
                <div class="row" style="margin-bottom: 20px;">
                    <!-- Left: Invoice Information Card -->
                    <div class="col-5">
                        <div style="border: 2px solid black; font-size: 14px;">
                            <!-- Header with invoice type and number -->
                            <div style="background-color: #d9d9d9; color: #003366; padding: 8px 10px;">
                                <strong>
                                    <t t-set="layout_document_title">
                                        <t t-if="not proforma">
                                            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Facture</span>
                                            <span t-elif="o.move_type == 'out_invoice' and o.state == 'draft'">Facture brouillon</span>
                                            <span t-elif="o.move_type == 'out_invoice' and o.state == 'cancel'">Facture annulée</span>
                                            <span t-elif="o.move_type == 'out_refund' and o.state == 'posted'">Avoir</span>
                                            <span t-elif="o.move_type == 'out_refund' and o.state == 'draft'">Avoir brouillon</span>
                                            <span t-elif="o.move_type == 'out_refund' and o.state == 'cancel'">Avoir annulé</span>
                                            <span t-elif="o.move_type == 'in_refund' and not o.journal_id.is_self_billing">Avoir fournisseur</span>
                                            <span t-elif="o.move_type == 'in_refund' and o.journal_id.is_self_billing">Avoir auto-facturation</span>
                                            <span t-elif="o.move_type == 'in_invoice' and not o.journal_id.is_self_billing">Facture fournisseur</span>
                                            <span t-elif="o.move_type == 'in_invoice' and o.journal_id.is_self_billing">Auto-facturation</span>
                                        </t>
                                        <t t-else="">
                                            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Proforma</span>
                                            <span t-elif="o.move_type == 'out_invoice' and o.state == 'draft'">Proforma brouillon</span>
                                            <span t-elif="o.move_type == 'out_invoice' and o.state == 'cancel'">Proforma annulée</span>
                                            <span t-elif="o.move_type == 'out_refund'">Avoir proforma</span>
                                            <span t-elif="o.move_type == 'in_refund'">Avoir fournisseur proforma</span>
                                            <span t-elif="o.move_type == 'in_invoice'">Facture fournisseur proforma</span>
                                        </t>
                                    </t>
                                    # : <span t-field="o.name"/>
                                </strong>
                            </div>

                            <!-- Invoice details -->
                            <div style="padding: 8px 10px;" t-if="o.invoice_date">
                                <strong>
                                    <t t-if="o.move_type == 'out_invoice'">Date de facture :</t>
                                    <t t-elif="o.move_type == 'out_refund'">Date de l'avoir :</t>
                                    <t t-elif="o.move_type == 'out_receipt'">Date du reçu :</t>
                                    <t t-else="">Date :</t>
                                </strong>
                                <span t-field="o.invoice_date" t-options='{"widget": "date"}'/>
                            </div>

                            <div style="padding: 8px 10px;" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'">
                                <strong>Date d'échéance :</strong>
                                <span t-field="o.invoice_date_due" t-options='{"widget": "date"}'/>
                            </div>

                            <div style="padding: 8px 10px;" t-if="o.taxable_supply_date and o.show_taxable_supply_date">
                                <strong>Livraison imposable :</strong>
                                <span t-field="o.taxable_supply_date" t-options='{"widget": "date"}'/>
                            </div>

                            <div style="padding: 8px 10px;" t-if="o.delivery_date">
                                <strong>Date de livraison :</strong>
                                <span t-field="o.delivery_date" t-options='{"widget": "date"}'/>
                            </div>

                            <div style="padding: 8px 10px;" t-if="o.invoice_origin">
                                <strong>Origine :</strong>
                                <span t-field="o.invoice_origin"/>
                            </div>

                            <div style="padding: 8px 10px;" t-if="o.ref">
                                <strong>Référence :</strong>
                                <span t-field="o.ref"/>
                            </div>

                            <div style="padding: 8px 10px;" t-if="o.invoice_incoterm_id">
                                <strong>Incoterm :</strong>
                                <span t-field="o.invoice_incoterm_id.code"/>
                                <span t-if="o.incoterm_location"> - <span t-field="o.incoterm_location"/></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-1"></div>

                    <!-- Right: Customer Information Card -->
                    <div class="col-6">
                        <div style="border: 2px solid black; padding: 15px; min-height: 200px;">
                            <!-- Shipping Address if different -->
                            <t t-if="o.partner_shipping_id and (o.partner_shipping_id != o.partner_id)">
                                <div groups="account.group_delivery_invoice_address" style="margin-bottom: 15px;">
                                    <strong>Adresse de livraison :</strong>
                                    <div t-field="o.partner_shipping_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                                </div>
                                <hr/>
                            </t>

                            <!-- Customer Details -->
                            <div>
                                <strong>Client :</strong>
                                <span t-field="o.partner_id.name"/>
                            </div>
                            <div style="margin-top: 5px;">
                                <strong>Adresse :</strong>
                                <div t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                            </div>
                            <div t-if="o.partner_id.vat" style="margin-top: 5px;">
                                <strong>
                                    <t t-if="o.company_id.account_fiscal_country_id.vat_label" t-out="o.company_id.account_fiscal_country_id.vat_label"/>
                                    <t t-else="">TVA</t>
                                    :
                                </strong>
                                <span t-field="o.partner_id.vat"/>
                            </div>
                            <div t-if="o.partner_id.ref" style="margin-top: 5px;">
                                <strong>Code client :</strong>
                                <span t-field="o.partner_id.ref"/>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Invoice Lines Table -->
                <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                <t t-set="display_taxes" t-value="any(l.tax_ids for l in o.invoice_line_ids)"/>
                <t t-set="has_long_desc" t-value="any(line.name and line.name.count('\n') > 30 for line in o.invoice_line_ids if line.name)"/>

                <table class="table table-sm" style="margin-bottom: 20px; border: 2px solid black; border-collapse: collapse; width: 100%;">
                    <thead t-attf-style="#{has_long_desc and 'display: table-row-group;' or ''}">
                        <tr style="background-color: #f8f9fa; color: #003366; text-align: center; height: 40px;">
                            <th style="border: 2px solid black; text-align: left; padding: 8px;">DESCRIPTION</th>
                            <th style="border: 2px solid black; padding: 8px;">QUANTITÉ</th>
                            <th style="border: 2px solid black; padding: 8px;" t-attf-class="{{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">PRIX UNITAIRE</th>
                            <th t-if="display_discount" style="border: 2px solid black; padding: 8px;" t-attf-class="{{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">REM.%</th>
                            <th t-if="display_taxes" style="border: 2px solid black; padding: 8px;" t-attf-class="{{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">TAXES</th>
                            <th style="border: 2px solid black; padding: 8px;">TOTAL</th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                        <t t-set="lines_to_report" t-value="o._get_move_lines_to_report()"/>
                        <t t-set="current_section" t-value="None"/>
                        <t t-set="current_subsection" t-value="None"/>
                        <t t-set="current_subtotal" t-value="0"/>

                        <t t-foreach="lines_to_report" t-as="line">
                            <t t-set="is_note" t-value="line.display_type == 'line_note'"/>
                            <t t-set="is_section" t-value="line.display_type == 'line_section'"/>
                            <t t-set="is_subsection" t-value="line.display_type == 'line_subsection'"/>
                            <t t-set="is_product" t-value="line.display_type == 'product'"/>

                            <t t-if="is_section">
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subsection" t-value="None"/>
                                <t t-set="line_padding" t-value="0"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-elif="is_subsection">
                                <t t-set="current_subsection" t-value="line"/>
                                <t t-set="line_padding" t-value="2"/>
                            </t>
                            <t t-else="">
                                <t t-set="line_padding" t-value="3 if current_subsection else (2 if current_section else 0)"/>
                            </t>

                            <t t-set="padding_class" t-value="line_padding and ('px-' + str(line_padding)) or ''"/>
                            <t t-set="hide_details" t-value="line.collapse_composition"/>
                            <t t-set="hide_prices" t-value="line.collapse_prices"/>

                            <t t-if="not hide_details and not hide_prices">
                                <tr t-att-class="'fw-bolder o_line_section' if is_section else 'fw-bold o_line_subsection' if is_subsection else 'fst-italic o_line_note' if is_note else ''">
                                    <t t-set="line_colspan" t-value="line.get_column_to_exclude_for_colspan_calculation(line.tax_ids)"/>

                                    <t t-if="is_product">
                                        <!-- Update subtotal for section -->
                                        <t t-set="current_subtotal" t-value="current_subtotal + (line.price_total if o.company_price_include == 'tax_included' else line.price_subtotal)"/>

                                        <td style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;" t-att-class="padding_class">
                                            <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <td class="text-center" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;">
                                            <span t-field="line.quantity" class="text-nowrap"/>
                                            <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                            <span t-if="line.product_uom_id != line.product_id.uom_id" groups="uom.group_uom" class="text-muted small">
                                                <br/>
                                                <t t-set="product_uom_qty" t-value="line.product_uom_id._compute_quantity(line.quantity, line.product_id.uom_id)"/>
                                                <span t-out="product_uom_qty" t-options="{'widget': 'float', 'decimal_precision': 'Product Unit'}"/>
                                                <span t-field="line.product_id.uom_id"/>
                                            </span>
                                        </td>
                                        <td class="text-end" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;" t-attf-class="{{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-if="not hide_prices" class="text-nowrap" t-field="line.price_unit"/>
                                        </td>
                                        <td t-if="display_discount" class="text-center" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;" t-attf-class="{{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.discount"/>
                                        </td>
                                        <t t-set="taxes" t-value="', '.join(tax.tax_label for tax in line.tax_ids if tax.tax_label)"/>
                                        <td t-if="display_taxes" class="text-end" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;" t-attf-class="{{ 'd-none d-md-table-cell' if report_type == 'html' else '' }} {{ 'text-nowrap' if len(taxes) &lt; 10 else '' }}">
                                            <span t-if="not hide_prices" t-out="taxes"/>
                                        </td>
                                        <td class="text-end" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;">
                                            <span t-if="not hide_prices and o.company_price_include == 'tax_excluded'" class="text-nowrap" t-field="line.price_subtotal"/>
                                            <span t-if="not hide_prices and o.company_price_include == 'tax_included'" class="text-nowrap" t-field="line.price_total"/>
                                        </td>
                                    </t>

                                    <t t-elif="line.display_type in ('line_section', 'line_subsection')">
                                        <t t-set="section_subtotal" t-value="line.get_section_subtotal()"/>
                                        <td t-att-colspan="(6 if display_discount else 5) - line_colspan" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;" t-attf-class="{{padding_class}} {{'d-none d-md-table-cell' if report_type == 'html' else ''}}">
                                            <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <td colspan="2" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;" t-attf-class="{{padding_class}} {{'d-md-none d-table-cell' if report_type == 'html' else 'd-none'}}">
                                            <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <td colspan="1" class="text-end" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;">
                                            <span t-out="section_subtotal" class="text-nowrap" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </t>

                                    <t t-elif="is_note">
                                        <td colspan="99" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;">
                                            <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>

                            <!-- Handle collapsed/grouped lines -->
                            <t t-else="">
                                <t t-if="hide_details" t-set="grouped_lines" t-value="line._get_child_lines()"/>
                                <t t-if="hide_prices" t-set="grouped_lines" t-value="line._get_child_lines(False)"/>
                                <t t-foreach="grouped_lines" t-as="grouped_line">
                                    <t t-if="grouped_line['display_type'] == 'product'">
                                        <t t-set="line_colspan" t-value="1"/>
                                    </t>
                                    <t t-else="">
                                        <t t-set="line_colspan" t-value="3 + (1 if display_discount else 0) + (1 if display_taxes and not grouped_line.get('taxes') else 0)"/>
                                    </t>

                                    <tr t-att-class="'fw-bolder o_line_section' if grouped_line.get('display_type') == 'line_section' and not hide_details else 'fw-bold o_line_subsection' if grouped_line.get('display_type') == 'line_subsection' and not hide_details else ''">
                                        <td t-att-colspan="line_colspan" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;" t-attf-class="{{'d-none d-md-table-cell' if report_type == 'html' else ''}} {{padding_class}}">
                                            <span t-out="grouped_line['name']" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <td t-att-colspan="2 if grouped_line['display_type'] != 'product' else 1" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;" t-attf-class="{{'d-md-none d-table-cell' if report_type == 'html' else 'd-none'}} {{padding_class}}">
                                            <span t-out="grouped_line['name']" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <td t-if="hide_details or (hide_prices and grouped_line['display_type'] not in ('line_section', 'line_subsection'))" colspan="1" class="text-center" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;">
                                            <div t-if="hide_details">
                                                <span>1.00</span>
                                                <span groups="uom.group_uom">Units</span>
                                            </div>
                                            <div t-if="hide_prices and grouped_line['display_type'] not in ('line_section', 'line_subsection')">
                                                <span t-out="grouped_line['quantity']" t-options="{'widget': 'float', 'decimal_precision': 'Product Unit'}"/>
                                                <t t-if="grouped_line.get('line_uom')">
                                                    <span t-out="grouped_line['line_uom'].display_name" groups="uom.group_uom"/>
                                                </t>
                                            </div>
                                        </td>
                                        <td t-if="grouped_line['display_type'] not in ('line_section', 'line_subsection')" colspan="1" class="text-end" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;" t-attf-class="{{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-if="not hide_prices" t-out="grouped_line['price_subtotal']" t-options="{'widget': 'float', 'decimal_precision': 'Product Price'}" class="text-nowrap"/>
                                        </td>
                                        <td t-if="display_discount and grouped_line['display_type'] == 'product'" colspan="1" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;" class="d-none d-md-table-cell"/>
                                        <td t-if="(display_taxes and grouped_line['display_type'] in ('line_section', 'line_subsection') and grouped_line.get('taxes')) or grouped_line['display_type'] == 'product'" colspan="1" class="text-end" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;" t-attf-class="{{'d-none d-md-table-cell' if report_type == 'html' else ''}}">
                                            <span t-if="grouped_line.get('taxes')" t-out="','.join(grouped_line['taxes'])"/>
                                        </td>
                                        <td colspan="1" class="text-end" style="border-left: 2px solid black; border-right: 2px solid black; padding: 8px;">
                                            <span t-if="(grouped_line.get('display_type') in ('line_section', 'line_subsection') or hide_details) and o.company_price_include == 'tax_excluded'" class="text-nowrap" t-out="grouped_line['price_subtotal']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            <span t-if="(grouped_line.get('display_type') in ('line_section', 'line_subsection') or hide_details) and o.company_price_include == 'tax_included'" class="text-nowrap" t-out="grouped_line['price_total']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </t>
                    </tbody>
                </table>

                <!-- Totals Section -->
                <div class="row">
                    <!-- Left: Amount in words -->
                    <div class="col-6">
                        <div style="border: 1px solid black; text-align: center; padding: 10px;" t-if="o.company_id.display_invoice_amount_total_words">
                            <strong>Arrêter à la somme de :</strong><br/>
                            <span t-field="o.amount_total_words" class="text-muted"/>
                        </div>
                    </div>

                    <!-- Right: Totals Table -->
                    <div class="col-6">
                        <div class="ms-auto" style="width: 350px;">
                            <table class="table table-sm" style="border: 2px solid black; border-collapse: collapse; width: 100%;">
                                <!-- Tax totals -->
                                <t t-if="o.tax_totals" t-call="account.document_tax_totals">
                                    <t t-set="tax_totals" t-value="o.tax_totals"/>
                                    <t t-set="currency" t-value="o.currency_id"/>
                                </t>

                                <!-- Payments -->
                                <t t-if="print_with_payments">
                                    <t t-if="o.payment_state != 'invoicing_legacy'">
                                        <t t-set="payments_vals" t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []"/>
                                        <t t-foreach="payments_vals" t-as="payment_vals">
                                            <tr t-if="payment_vals['is_exchange'] == 0">
                                                <td style="border: 2px solid black; padding: 8px;">
                                                    <i>
                                                        <t t-if="payment_vals['is_refund']">Remboursé le </t>
                                                        <t t-else="">Payé le </t>
                                                        <t t-out="payment_vals['date']" t-options='{"widget": "date"}'/>
                                                    </i>
                                                </td>
                                                <td class="text-end" style="border: 2px solid black; padding: 8px;">
                                                    <span t-out="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="len(payments_vals) > 0">
                                            <tr class="fw-bold">
                                                <td style="border: 2px solid black; padding: 8px;">Montant restant dû</td>
                                                <td class="text-end" style="border: 2px solid black; padding: 8px;">
                                                    <span t-field="o.amount_residual"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                            </table>
                        </div>

                        <!-- Company currency totals if different -->
                        <t t-if="o.tax_totals and o.tax_totals.get('display_in_company_currency')">
                            <t t-set="tax_totals" t-value="o.tax_totals"/>
                            <t t-call="account.document_tax_totals_company_currency_template"/>
                        </t>
                    </div>
                </div>

                <!-- Payment Information & Signature -->
                <div class="row" style="margin-top: 30px;">
                    <div class="col-6">
                          <div class="col-6">
                        <div style="border: 1px solid black; text-align: center; padding: 8px;">
                            <strong>Arrêter à la somme de:</strong>
                            <span t-field="o.num_word"/>
                        </div>
                    </div>
                        <div style="padding: 15px;">
                            <!-- Payment Terms -->
                            <div t-if="o.invoice_payment_term_id" style="margin-bottom: 10px;">
                                <strong>Condition de paiement :</strong><br/>
                                <span t-field="o.invoice_payment_term_id.note" t-if="o.invoice_payment_term_id.note"/>
                                <span t-field="o.invoice_payment_term_id.name" t-else=""/>
                            </div>

                            <!-- Payment term details -->
                            <t t-set="payment_term_details" t-value="o.payment_term_details"/>
                            <div t-if="o.invoice_payment_term_id.display_on_invoice and payment_term_details" style="margin-bottom: 10px;">
                                <t t-if="o._is_eligible_for_early_payment_discount(o.currency_id,o.invoice_date)">
                                    <div>
                                        <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-out="o.invoice_payment_term_id._get_amount_due_after_discount(o.amount_total, o.amount_tax)"/>
                                        dû si payé avant
                                        <span t-out="o.invoice_payment_term_id._get_last_discount_date_formatted(o.invoice_date)"/>
                                    </div>
                                </t>
                                <t t-if="len(payment_term_details) > 1" t-foreach="payment_term_details" t-as="term">
                                    <div>
                                        <span t-out="term_index + 1"/> - Versement de
                                        <t t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-out="term.get('amount')"/>
                                        dû le
                                        <t t-out="term.get('date')"/>
                                    </div>
                                </t>
                            </div>

                            <!-- Payment Reference -->
                            <div t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference" style="margin-bottom: 10px;">
<!--                                <strong>Référence de paiement :</strong><br/>-->
<!--                                <span class="fw-bold" t-field="o.payment_reference"/>-->
                            </div>

                            <!-- Bank Account -->
                            <div t-if="o.partner_bank_id">
<!--                                <strong>Paiement sur ce compte :</strong><br/>-->
<!--                                <span t-field="o.partner_bank_id"/>-->
                            </div>

                            <!-- Additional bank info if available -->
                            <div t-if="o.company_id.partner_id.bank_ids and not o.partner_bank_id">
<!--                                <t t-set="bank" t-value="o.company_id.partner_id.bank_ids[0]"/>-->
<!--                                <div><strong>Paiement :</strong> Par virement bancaire</div>-->
<!--                                <div t-if="bank.bank_id">-->
<!--                                    <strong>Banque :</strong>-->
<!--                                    <span t-field="bank.bank_id.name"/>-->
<!--                                </div>-->
<!--                                <div t-if="bank.acc_number">-->
<!--                                    <strong>IBAN :</strong>-->
<!--                                    <span t-field="bank.acc_number"/>-->
<!--                                </div>-->
<!--                                <div t-if="bank.bank_id.bic">-->
<!--                                    <strong>SWIFT :</strong>-->
<!--                                    <span t-field="bank.bank_id.bic"/>-->
<!--                                </div>-->
                            </div>
                        </div>
                    </div>

                    <div class="col-6 text-end">
                        <div style="margin-top: 50px;">
                            <strong>
                                <u>
                                    <i>Cachet et Signature</i>
                                </u>
                            </strong>
                        </div>
                    </div>
                </div>

                <!-- QR Codes Section -->
                <div class="row" style="margin-top: 20px;">
                    <!-- Bank QR Code -->
                    <div class="col-6">
                        <t t-set="show_qr" t-value="o.display_qr_code and o.amount_residual"/>
                        <div t-if="not show_qr" class="oe_structure"></div>
                        <div t-if="show_qr" class="d-flex mb-3 avoid-page-break-inside">
                            <t t-set="qr_code_url" t-value="o._generate_qr_code(silent_errors=True)"/>
                            <div class="qrcode me-3 position-relative" t-if="qr_code_url">
                                <p class="position-relative mb-0">
                                    <img t-att-src="qr_code_url" class="border border-dark rounded"/>
                                    <img src="/account/static/src/img/Odoo_logo_O.svg"
                                         class="top-50 start-50 position-absolute bg-white border border-3 rounded-circle"
                                         style="width: 30px; height: 30px; transform: translate(-50%, -50%);"/>
                                </p>
                            </div>
                            <div class="d-inline text-muted lh-sm fst-italic" t-if="qr_code_url">
                                <p><strong>Scannez ce QR Code avec<br/>votre application bancaire</strong></p>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Link QR Code -->
                    <div class="col-6">
                        <t t-set="show_link_qr" t-value="o.display_link_qr_code and o.amount_residual"/>
                        <div t-if="show_link_qr" class="d-flex mb-3 avoid-page-break-inside">
                            <t t-set="portal_qr_code" t-value="o._generate_portal_payment_qr()"/>
                            <div class="qrcode me-3 position-relative" t-if="portal_qr_code">
                                <a t-att-href="o._get_portal_payment_link()" target="_blank" class="top-0 start-0 position-absolute w-100 h-100 z-1" />
                                <p class="position-relative mb-0">
                                    <img t-att-src="portal_qr_code" class="border border-dark rounded"/>
                                    <img src="/account/static/src/img/Odoo_logo_O.svg"
                                         class="top-50 start-50 position-absolute bg-white border border-3 rounded-circle"
                                         style="width: 30px; height: 30px; transform: translate(-50%, -50%);"/>
                                </p>
                            </div>
                            <div class="d-inline lh-sm" t-if="portal_qr_code">
                                <p class="fw-bold mb-0">PAYEZ EN UN ÉCLAIR!</p>
                                <p class="text-muted fst-italic">Scannez le QR code<br/>ou cliquez pour payer en ligne</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Notes and Terms -->
                <div class="mt-4">
                    <!-- Fiscal Position Note -->
                    <div t-if="not is_html_empty(o.fiscal_position_id.note)" class="mb-3 justify-text">
                        <p><span t-field="o.fiscal_position_id.note"/></p>
                    </div>

                    <!-- Tax Legal Notes -->
                    <div t-if="not is_html_empty(o.taxes_legal_notes)" class="mb-3 justify-text">
                        <p><span t-field="o.taxes_legal_notes"/></p>
                    </div>

                    <!-- Narration / Terms and Conditions -->
                    <div class="text-muted mb-3" t-attf-style="#{'text-align:justify;text-justify:inter-word;' if o.company_id.terms_type != 'html' else ''}" t-if="not is_html_empty(o.narration)">
                        <span t-field="o.narration"/>
                    </div>

                    <!-- Incoterm -->
                    <div t-if="o.invoice_incoterm_id and not o.invoice_incoterm_id in ['invoice_date', 'invoice_date_due', 'delivery_date', 'invoice_origin', 'ref']" class="mb-3">
                        <strong>Incoterm :</strong>
                        <span t-field="o.invoice_incoterm_id.code"/> - <span t-field="o.invoice_incoterm_id.name"/>
                    </div>
                </div>

                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <!-- Wrapper: Normal Invoices (without payments) -->
    <template id="report_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-call="nn_custom_report.report_invoice_document" t-lang="lang"/>
            </t>
        </t>
    </template>

    <!-- Wrapper: Invoices with Payments -->
    <template id="report_invoice_with_payments_custom">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-set="print_with_payments" t-value="True"/>
                <t t-call="nn_custom_report.report_invoice_document" t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>